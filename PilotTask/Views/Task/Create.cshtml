@model PilotTask.ViewModels.TasksViewModel.TaskCreateViewModel

@{
    ViewBag.Title = "Add Task";
}

<h2>Add Task</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Task.TaskName" class="control-label"></label>
        <input asp-for="Task.TaskName" class="form-control" />
        <span asp-validation-for="Task.TaskName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.TaskDescription" class="control-label"></label>
        <input asp-for="Task.TaskDescription" class="form-control" />
        <span asp-validation-for="Task.TaskDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.StartTime" class="control-label"></label>
        <input asp-for="Task.StartTime" class="form-control" />
        <span asp-validation-for="Task.StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Status" class="control-label"></label>
        <select asp-for="Task.Status" class="form-control" asp-items="Html.GetEnumSelectList<TasksStatus>()"></select>
        <span asp-validation-for="Task.Status" class="text-danger"></span>
    </div>
    <div class="mt-2">
        <input type="hidden" asp-for="ProfileId" />
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="Profile" class="btn btn-secondary">Back</a>
    </div>
</form>
