@model ProfileViewModel

@{
    ViewBag.Title = "Delete Profile";
}

<h2>Delete Profile</h2>

<h3>Are you sure you want to delete this profile?</h3>
<h4>@Model.FirstName @Model.LastName</h4>
<p>Date of Birth: @Model.DateOfBirth.ToShortDateString()</p>
<p>Phone Number: @Model.PhoneNumber</p>
<p>Email Id: @Model.EmailId</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProfileId"/>
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>